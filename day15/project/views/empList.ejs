<html>
    <head>
        <style>
            h3{
                color : blue;
                text-align: center;
            }

            div
            {
                border: 2px solid blue;
                margin: 10px;
                padding : 5px;

            }

        </style>
    </head>
    <body>
        <h3>Developing MVC Based Web Application using Express JS</h3>
        <hr/>


        <h2>All Employee Details Page</h2>

        <a   href="/EmpController/CreateEmp">Create New Employee</a>
        <hr/>
        <table width="500"  border="2">
                <tr>
                    <th>Employee Number</th>
                    <th>Employee Name</th>
                    <th>Job</th>
                    <th>Salary </th>
                    <th>Dept Number </th>
                    <th>Find Details </th>
                </tr>


                <%
                    for(let item of empsArray)  
                    {
                %>

                    <tr>
                        <td> <%=item.empno%> </td>
                        <td> <%=item.ename%> </td>
                        <td> <%=item.job%> </td>
                        <td> <%=item.salary%> </td>
                        <td> <%=item.deptno%> </td>
                        <td align="center">
                            <a href="/EmpController/Emps/<%=item.empno%>">Details</a>
                        </td>
                    </tr>

                <%  } %>


        </table>
        
    </body>
</html>